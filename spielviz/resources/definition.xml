<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>
  <object class="GtkWindow" id="window">
    <property name="name">window</property>
    <property name="width_request">-1</property>
    <property name="height_request">600</property>
    <property name="can_focus">False</property>

    <child>
      <object class="GtkBox">
        <property name="can_focus">False</property>
        <property name="orientation">vertical</property>

        <child>
          <object class="GtkFrame">
            <child>
              <object class="GtkToolbar" id="toolbar">
                <property name="name">toolbar</property>
                <child>
                  <object class="GtkToolItem">
                    <property name="margin-right">2</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Game:</property>
                      </object>
                    </child>
                  </object>
                </child>

                <child>
                  <object class="GtkToolItem" id="select_game">
                    <property name="name">select_game</property>
                    <property name="can_focus">False</property>
                    <property name="is_important">True</property>
                  </object>
                </child>

                <child>
                  <object class="GtkToolItem">
                    <property name="margin-left">10</property>
                    <property name="margin-right">2</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">History:</property>
                      </object>
                    </child>
                  </object>
                </child>

                <child>
                  <object class="GtkToolItem" id="select_history">
                    <property name="name">select_history</property>
                    <property name="can_focus">False</property>
                    <property name="is_important">True</property>
                    <property name="margin">3</property>
                  </object>
                </child>

                <child>
                  <object class="GtkToolItem">
                    <property name="margin-left">10</property>
                    <property name="margin-right">2</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Lookahead:</property>
                      </object>
                    </child>
                  </object>
                </child>

                <child>
                  <object class="GtkToolItem" id="lookahead">
                    <property name="name">lookahead</property>
                    <property name="can_focus">False</property>
                    <property name="is_important">True</property>
                    <property name="margin">3</property>
                    <property name="width-request">5</property>
                  </object>
                </child>

                <child>
                  <object class="GtkToolItem">
                    <property name="margin-left">10</property>
                    <property name="margin-right">2</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Lookbehind:</property>
                      </object>
                    </child>
                  </object>
                </child>

                <child>
                  <object class="GtkToolItem" id="lookbehind">
                    <property name="name">lookbehind</property>
                    <property name="can_focus">False</property>
                    <property name="is_important">True</property>
                    <property name="margin">3</property>
                  </object>
                </child>

                <child>
                  <object class="GtkToolItem">
                    <property name="margin">3</property>
                    <child>
                      <object class="GtkSeparator"/>
                    </child>
                  </object>
                </child>

                <child>
                  <object class="GtkToolItem">
                    <child>
                      <object class="GtkCheckButton" id="full_tree">
                        <property name="name">full_tree</property>
                        <property name="label">Show full tree</property>
                      </object>
                    </child>
                  </object>
                </child>

