          </object>
        </child>

        <child>
          <object class="GtkPaned">
            <property name="can_focus">False</property>
            <child>
              <object class="GtkPaned" id="state_info">
                <property name="name">state_info</property>
                <property name="width_request">350</property>
                <property name="can_focus">False</property>
                <property name="orientation">vertical</property>
                <property name="expand">True</property>
                <child>
                  <object class="GtkFrame">
                    <property name="shadow_type">GTK_SHADOW_IN</property>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Selected state</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkScrolledWindow" id="state_view">
                            <property name="name">state_view</property>
                            <property name="can_focus">False</property>
                            <property name="expand">True</property>
                            <property name="height_request">250</property>
                            <!-- todo: expand state_view as first, but maximally to some height,
                            and then state_history into whatever space remains. -->
                            <child>
                              <placeholder/>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="shadow_type">GTK_SHADOW_IN</property>
                    <property name="can_focus">False</property>
                    <!--                    <property name="expand">True</property>-->

                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>

                        <child>
                          <object class="GtkExpander">
                            <child type="label">
                              <object class="GtkLabel">
                                <property name="label">Game information</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkBox" id="game_information">
                                <child>
                                  <placeholder/>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkExpander">
                            <child type="label">
                              <object class="GtkLabel">
                                <property name="label">Player</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkBox" id="player">
                                <child>
                                  <placeholder/>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkExpander">
                            <child type="label">
                              <object class="GtkLabel">
                                <property name="label">Rewards</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkBox" id="rewards">
                                <child>
                                  <placeholder/>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkExpander">
                            <child type="label">
                              <object class="GtkLabel">
                                <property name="label">History</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkBox" id="history">
                                <property name="name">history</property>
                                <child>
                                  <placeholder/>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkExpander">
                            <child type="label">
                              <object class="GtkLabel">
                                <property name="label">Observations</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkBox">
                                <property name="name">observations</property>
                                <property name="orientation">vertical</property>
                                <child>
                                  <object class="GtkCheckButton" id="public_info">
                                    <property name="label">Public info</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkCheckButton" id="perfect_recall">
                                    <property name="label">Perfect recall</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">horizontal</property>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label">Private info:</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkRadioButton" id="private_info_none">
                                        <property name="label">None</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkRadioButton" id="private_info_single">
                                        <property name="label">Single</property>
                                        <property name="group">private_info_none</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkRadioButton" id="private_info_all">
                                        <property name="label">All</property>
                                        <property name="group">private_info_none</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox" id="observations">
                                    <child>
                                      <placeholder/>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="GtkDrawingArea" id="plot_area">
                <property name="name">plot_area</property>
                <property name="can_focus">False</property>
              </object>
            </child>
          </object>
          <packing>
            <property name="expand">True</property>
            <property name="fill">True</property>
          </packing>
        </child>
      </object>
    </child>
  </object>
</interface>
